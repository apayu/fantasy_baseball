<table class="border-separate border border-black text-center w-full">
  <thead>
    <tr>
      <th class="bg-blue-500 text-white"></th>
      <th class="bg-blue-500 text-white">姓名</th>
      <th class="bg-blue-500 text-white">隊伍</th>
      <th class="bg-blue-500 text-white">位置</th>
      <th class="bg-blue-500 text-white"><%= link_to 'G', players_path(search_params('g')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'AVG', players_path(search_params('avg')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'OBP', players_path(search_params('obp')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'SLG', players_path(search_params('slg')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'OPS', players_path(search_params('ops')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'AB', players_path(search_params('ab')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'R', players_path(search_params('r')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'H', players_path(search_params('h')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to '2B', players_path(search_params('d')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to '3B', players_path(search_params('t')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'HR', players_path(search_params('hr')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'RBI', players_path(search_params('rbi')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'BB', players_path(search_params('bb')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'K', players_path(search_params('so')) %></th>
      <th class="bg-blue-500 text-white"><%= link_to 'SB', players_path(search_params('sb')) %></th>
    </tr>
  </thead>
  <tbody>
    <% cpbl_hitter.each_with_index do |player, index| %>
      <tr class=<%= "#{index.even? ? 'bg-blue-100' : 'bg-blue-50'}" %>>
        <td><%= index + 1 %></td>
        <td><%= link_to player.name, player_path(player.id) %></td>
        <td><%= player.attr_team_name %></td>
        <td><%= player.code.upcase %></td>
        <td><%= player.g %></td>
        <td><%= player.avg %></td>
        <td><%= player.obp %></td>
        <td><%= player.slg %></td>
        <td><%= player.ops %></td>
        <td><%= player.ab %></td>
        <td><%= player.r %></td>
        <td><%= player.h %></td>
        <td><%= player.d %></td>
        <td><%= player.t %></td>
        <td><%= player.hr %></td>
        <td><%= player.rbi %></td>
        <td><%= player.bb %></td>
        <td><%= player.so %></td>
        <td><%= player.sb %></td>
      </tr>
    <% end %>
  </tbody>
</table>
